<form method="post" action="{{bulkurl}}">
    <table class="table">
        <thead>
            <tr>
                <th><input type="checkbox" id="select-all" /></th>
                <th>{{#str}}message{{/str}}</th>
            </tr>
        </thead>
        <tbody>
            {{#messages}}
                <tr>
                    <td><input type="checkbox" name="messageids[]" value="{{id}}"></td>
                    <td>{{message}}</td>
                </tr>
            {{/messages}}
        </tbody>
    </table>

    <div class="form-group">
        <label for="bulk-action">{{#str}}bulkoperations{{/str}}</label>
        <select name="action" id="bulk-action" class="form-control">
            <option value="markread">{{#str}}markasread{{/str}}</option>
            <option value="delete">{{#str}}delete{{/str}}</option>
        </select>
    </div>
    
    <button type="submit" class="btn btn-primary">{{#str}}submit{{/str}}</button>
</form>

<script>
    // Select/Deselect all checkboxes
    document.getElementById('select-all').addEventListener('click', function() {
        var checkboxes = document.querySelectorAll('input[name="messageids[]"]');
        for (var checkbox of checkboxes) {
            checkbox.checked = this.checked;
        }
    });
</script>
