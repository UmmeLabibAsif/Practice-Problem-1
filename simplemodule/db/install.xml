<?xml version="1.0" encoding="UTF-8" ?>
<XMLDB PATH="mod/simplemodule/db" VERSION="2023100100" COMMENT="Simple module DB definition"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:noNamespaceSchemaLocation="../../../lib/xmldb/xmldb.xsd"
    >

    <TABLES>
    <TABLE NAME="simplemodule" COMMENT="Table for simple module">
        <FIELDS>
            <FIELD NAME="id" TYPE="int" LENGTH="10" NOTNULL="true" SEQUENCE="true" COMMENT="Primary key"/>
            <FIELD NAME="name" TYPE="char" LENGTH="255" NOTNULL="true" COMMENT="Name of the instance"/>
            <FIELD NAME="intro" TYPE="text" NOTNULL="false" COMMENT="Intro description"/>
            <FIELD NAME="introformat" TYPE="int" LENGTH="2" NOTNULL="true" DEFAULT="0" COMMENT="Intro format"/>
        </FIELDS>
        <KEYS>
            <KEY NAME="primary" TYPE="primary" FIELDS="id"/>
        </KEYS>
    </TABLE>
    </TABLES>
</XMLDB>
